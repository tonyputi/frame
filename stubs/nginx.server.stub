server {
    listen 80;
    listen 443;

    server_name {{ app_domain }};

    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-XSS-Protection "1; mode=block";
    add_header X-Content-Type-Options "nosniff";

    charset utf-8;

    location / {
        return 404 'Not found';
    }

    include {{ app_path }}/locations.conf;
}
